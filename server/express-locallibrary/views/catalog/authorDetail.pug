extends ../layout
block content
    h1 Author: #{author.fullname}
    p #{author.date_of_birth} - #{author.date_of_death}

    div(style='padding: 10px;')

      h4 Books

      dl
        each book in authorBooks
          hr
          dt
            a(href=book.url) #{book.title}
          dd #{book.summary}

        else
          p This author has no books.
